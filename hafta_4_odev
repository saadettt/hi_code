void main(List<String> args) {
  
  double kisaKenar = 4.76;
  double uzunKenar = 9.54;

  dikdortgenAlan(kisaKenar,uzunKenar);
  print(dikdortgenAlan(kisaKenar,uzunKenar));

  int a = 5;
  int b = 3;
  print(carp(a, b));
}

double dikdortgenAlan(double a, double b){
    return a * b;
}

int carp(int a,int b){

  int multipleByTwo(int x){
    return x * 2;
  }
  int result = a;

  for (int i = 0;i<b-1;i++){
    result=multipleByTwo(result);
  }
   return result;
}
